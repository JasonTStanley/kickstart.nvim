FROM nvidia/cuda:12.2.2-devel-ubuntu22.04

ENV DEBIAN_FRONTEND=noninteractive
# ---- Base system packages ----
RUN apt-get update && apt-get install -y \
    ca-certificates \
    curl \
    wget \
    gnupg \
    lsb-release \
    software-properties-common \
    git \
    ssh \
    vim \
    nano \
    less \
    unzip \
    iputils-ping \
    net-tools \
    \
    # Build + debug
    build-essential \
    cmake \
    ninja-build \
    pkg-config \
    gdb \
    \
    # Python
    python3 \
    python3-dev \
    python3-pip \
    python3-virtualenv \
    \
    # OpenGL / X11 (Unity, RViz, OpenCV visualization)
    libgl1 \
    libgl1-mesa-dri \
    libx11-6 \
    libxext6 \
    libxrandr2 \
    libxinerama1 \
    libxcursor1 \
    libxi6 \
    \
    # DISPLAY (for visualization tools)
    x11-apps \
    mesa-utils \
    \
    && rm -rf /var/lib/apt/lists/*

# ---- Python tooling ----
RUN python3 -m pip install --upgrade pip setuptools wheel

# ---- Locale (ROS2 + Python friendliness) ----
RUN apt-get update && apt-get install -y locales && \
    locale-gen en_US.UTF-8
ENV LANG=en_US.UTF-8
ENV LC_ALL=en_US.UTF-8

